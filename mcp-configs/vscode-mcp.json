{
  "$schema": "https://github.com/modelcontextprotocol/servers/blob/main/schema/mcp.json",
  "mcpServers": {
    "nexus": {
      "command": "python",
      "args": ["multi_server.py"],
      "cwd": ".",
      "env": {
        "PYTHONPATH": ".",
        "MCP_SERVER_NAME": "NexusServer",
        "LOG_LEVEL": "INFO"
      }
    },
    "nexus-docker": {
      "command": "docker",
      "args": [
        "run",
        "--rm",
        "-i",
        "--network=host",
        "-v", "./safe_files:/app/safe_files:rw",
        "-v", "./config.json:/app/config.json:ro",
        "nexus-mcp-server:latest"
      ],
      "env": {
        "MCP_SERVER_NAME": "NexusServer-Docker"
      }
    },
    "nexus-compose": {
      "command": "docker-compose",
      "args": ["exec", "-T", "nexus-mcp", "python", "multi_server.py"],
      "cwd": ".",
      "env": {
        "MCP_SERVER_NAME": "NexusServer-Compose"
      }
    }
  }
}